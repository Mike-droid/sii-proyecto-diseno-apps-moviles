<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvanceReticularSemestre1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:onClick="regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/secondaryLightColor"
            android:text="←"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semestre 1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/primaryColor"
            android:textSize="24sp" />

        <GridLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="3" >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#a0d796"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cálculo diferencial" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#a0d796"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fundamentos de programación" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#a0d796"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Taller de ética" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#a0d796"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Matemáticas discretas" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#a0d796"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Taller de administración" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#a0d796"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fundamentos de investigación" />
        </GridLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de colores"
            android:layout_gravity="center"
            android:background="@color/primaryColor"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
        <GridLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="4" >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#a0d796"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Acreditada" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#603060"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cursando" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#ffff66"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cursada sin acreditar" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#ff9900"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Curso especial" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Curso especial reprobado" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#0080c0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Posible a seleccionar" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#cccccc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Aún no disponible" />
        </GridLayout>
    </LinearLayout>

</android.widget.ScrollView>